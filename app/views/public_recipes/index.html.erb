<div class="flex flex-row justify-between">
  <h1 class="text-xl font-bold">Public Recipes</h1>
</div>
<% @recipes.each do |recipe| %>
  <div class="rounded-md border border-zinc-300 p-2 mb-4 bg-white/60">
    <div class="flex m-2">
      <div class="w-1/2">
        <h2
          class="
            font-semibold
            text-md
            text-sky-600
            hover:text-sky-700
            underline
            underline-offset-2
          "
        ><%= link_to recipe.name, recipe_path(recipe.id) %>
        </h2>
        <a href="#" class="text-sm font-bold">By:
          <%= recipe.user.name %></a>
      </div>
      <div class="w-1/2">
        <h3 class="text-sm font-bold">
          Total food items: <%= recipe.recipe_foods.length%>
        </h3>
         <h3 class="text-sm font-bold">
          Total price: $<%= recipe.recipe_foods.inject(0) { |sum , recipe_foods| sum + recipe_foods.quantity * recipe_foods.food.price } %>
        </h3>
      </div>
    </div>

  </div>
<% end %>
